<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="88dp"
        android:layout_height="27dp"

        android:layout_marginStart="8dp"
        android:text="Title"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/eventDate"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/eventMovie"
        android:layout_width="154dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="eventMovie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventTitle" />

    <TextView
        android:id="@+id/eventVenue"
        android:layout_width="65dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:text="Venue"
        app:layout_constraintBaseline_toBaselineOf="@+id/eventButton"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/eventAttend"
        android:layout_width="81dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="attendees"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eventDate"
        android:layout_width="105dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="date"
        app:layout_constraintBaseline_toBaselineOf="@+id/eventAttend"
        app:layout_constraintEnd_toStartOf="@+id/eventAttend"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toEndOf="@+id/eventTitle" />

    <Button
        android:id="@+id/eventButton"
        android:layout_width="103dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/eventVenue"
        app:layout_constraintTop_toBottomOf="@+id/eventAttend" />

</android.support.constraint.ConstraintLayout>